<?xml version="1.0" encoding="UTF-8"?>


<atlassian-plugin key="${atlassian.plugin.key}" name="${project.name}" plugins-version="2"> 
  <plugin-info> 
    <description>${project.description}</description>  
    <version>${project.version}</version>  
    <vendor name="${project.organization.name}" url="${project.organization.url}"/>  
    <param name="plugin-icon">images/pluginIcon.png</param>  
    <param name="plugin-logo">images/pluginLogo.png</param>
    <param name="configure.url">/secure/WebWorkAction.jspa</param>
  </plugin-info>  
  <!-- add our i18n resource -->  
  <resource type="i18n" name="i18n" location="HCBplugins"/>  
  <!-- add our web resources -->  
  <web-resource key="HCBplugins-resources" name="HCBplugins Web Resource"> 
    <dependency>com.atlassian.auiplugin:ajs</dependency>  
    <resource type="download" name="REST4DevOps.css" location="/css/REST4DevOps.css"/>  
    <resource type="download" name="REST4DevOps.js" location="/js/REST4DevOps.js"/>  
    <resource type="download" name="images/" location="/images"/>

    <context>ru.homecredit.jiraadapter</context> 
  </web-resource>  
  <rest name="Cf Opt Change" i18n-name-key="cf-opt-change.name" key="cf-opt-change" path="/cfoptchange" version="1.0"> 
    <description key="cf-opt-change.description">The Cf Opt Change Plugin</description> 
  </rest>  
  <webwork1 key="webwork-module" name="Webwork Module" i18n-name-key="webwork-module.name" class="java.lang.Object" roles-required="admin">>
    <description key="webwork-module.description">The Webwork Module Plugin</description>  
    <actions> 
      <action name="HCBplugins.webwork.WebWorkAction" alias="WebWorkAction"> 
        <view name="webwork-module.name">/templates/webwork-module/webwork-module.name.vm</view> 
      </action> 
    </actions> 
  </webwork1>  
  <web-section name="REST4DevOps" i18n-name-key="rest-4-dev-ops.name" key="rest-4-dev-ops" location="admin_plugins_menu" weight="1000"> 
    <description key="rest-4-dev-ops.description">REST4DevOps Plugin</description>
    <label key="rest-4-dev-ops.label"/> 
  </web-section>  
  <web-item name="configuration" i18n-name-key="rest-4-dev-ops-web-item.name" key="rest-4-dev-ops-web-item" section="admin_plugins_menu/rest-4-dev-ops" weight="1000">
    <description key="rest-4-dev-ops-web-item.description">configuration</description>
    <label key="rest-4-dev-ops-web-item.label"></label>  
    <link linkId="rest-4-dev-ops-web-item-link">/secure/WebWorkAction.jspa</link> 
  </web-item>

