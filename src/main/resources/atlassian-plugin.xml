<?xml version="1.0" encoding="UTF-8"?>


<atlassian-plugin key="${atlassian.plugin.key}" name="${project.name}" plugins-version="2">
  <plugin-info>
    <description>${project.description}</description>
    <version>${project.version}</version>
    <vendor name="${project.organization.name}" url="${project.organization.url}"/>
    <param name="plugin-icon">images/pluginIcon.png</param>
    <param name="plugin-logo">images/pluginLogo.png</param>
    <param name="configure.url">/secure/WebWorkAction.jspa</param>
  </plugin-info>
  <!-- add our i18n resource -->
  <resource type="i18n" name="i18n" location="ru.homecredit.jiraadapter"/>
  <!-- add our web resources -->

  <web-resource key="ru-homecredit-jiraadapter-resources"
                name="JiraAdapter Web Resource">
    <description key="ru-homecredit-jiraadapter-resources.description">AUI plugin and png thumbnails</description>
    <dependency>com.atlassian.auiplugin:ajs</dependency>
    <!--
    <resource type="download" name="REST4DevOps.css" location="/css/REST4DevOps.css"/>
    <resource type="download" name="REST4DevOps.js" location="/js/REST4DevOps.js"/>
    -->
    <resource type="download" name="images/" location="/images"/>

    <context>ru.homecredit.jiraadapter</context>
  </web-resource>

  <rest name="JiraAdapter REST" i18n-name-key="ru-homecredit-jiraadapter-rest.name"
        key="ru-homecredit-jiraadapter-rest"
        path="/cfoptchange" version="1.0">
    <description key="ru-homecredit-jiraadapter-rest.description">Rest Endpoint to manage field
      options</description>
  </rest>

  <webwork1 name="JiraAdapter Webwork" i18n-name-key="ru-homecredit-jiraadapter-webwork.name"
            key="ru-homecredit-jiraadapter-webwork" class="java.lang.Object" roles-required="admin">
    <description key="ru-homecredit-jiraadapter-webwork.description">JiraAdapter REST Plugin Webwork
      Module description</description>
    <actions>
      <action name="ru.homecredit.jiraadapter.webwork.WebWorkAction" alias="WebWorkAction">
        <view name="webwork-module.name">/templates/webwork-module.name.vm</view>
      </action>
    </actions>
  </webwork1>

  <web-section key="ru-homecredit-jiraadapter-websection" name="JiraAdapter WebSection"
               i18n-name-key="ru-homecredit-jiraadapter-websection.name"
               location="admin_plugins_menu" weight="1000">
    <description key="ru-homecredit-jiraadapter-websection.description">JiraAdapter
      websection description</description>
    <label> <!-- key="ru-homecredit-jiraadapter-websection.label"-->Jira-Adapter</label>
  </web-section>

  <web-item name="JiraAdapter Configuration" i18n-name-key="ru-homecredit-jiraadapter-configuration.name"
            key="ru-homecredit-jiraadapter-configuration"
            section="admin_plugins_menu/ru-homecredit-jiraadapter-websection" weight="1000">
    <label key="ru-homecredit-jiraadapter-configuration.label" >Configure</label>
    <description key="ru-homecredit-jiraadapter-configuration.description">configuration</description>
    <link linkId="ru-homecredit-jiraadapter-configuration-link">/secure/WebWorkAction.jspa</link>
  </web-item>
</atlassian-plugin>

